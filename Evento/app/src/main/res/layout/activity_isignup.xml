<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evento.evento.ISignup"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20sp"
    android:background="@drawable/background_color"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89sp"
        android:orientation="vertical"
        android:layout_weight="0.45"
        android:weightSum="1">
        <ImageView
            android:id="@+id/ivProfile_Isignup"
            android:layout_width="150sp"
            android:layout_gravity="center"
            android:layout_height="100sp"
            android:layout_weight="0.98"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/tvgallery_ISignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:padding="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/shapelogin"
                android:text="Gallery"/>
            <Button
                android:id="@+id/tvtakephoto_Isignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="@android:color/transparent"
                android:padding="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/shapelogin"
                android:text="Take Photo"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:weightSum="1"
        >

        <EditText
            android:id="@+id/etName_Isignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:padding="12sp"
            android:background="@drawable/shapeemail"
            android:drawablePadding="10sp"
            android:hint="College Name"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/white" />



        <EditText
            android:id="@+id/etEmail_Isignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:padding="12sp"
            android:background="@drawable/shapeemail"
            android:drawablePadding="10sp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/white" />

        <EditText
            android:id="@+id/etPassword_Isignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:padding="12sp"
            android:background="@drawable/shapeemail"
            android:drawablePadding="10sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/white" />

        <EditText
            android:id="@+id/etAddress_Isignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:padding="12sp"
            android:background="@drawable/shapeemail"
            android:drawablePadding="10sp"
            android:hint="Address"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/white" />



        <EditText
            android:id="@+id/etPhone_Isignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:padding="12sp"
            android:background="@drawable/shapeemail"
            android:drawablePadding="10sp"
            android:hint="Contact number"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/white" />

        <Button
            android:id="@+id/btnSignup_ISignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:shadowColor="@android:color/transparent"
            android:padding="15sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="3sp"
            android:layout_marginTop="0sp"
            android:background="@drawable/shapesignup"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
